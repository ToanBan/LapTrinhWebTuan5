<style>

    .product-card {
        background: #fff;
        text-align: center;
        padding-bottom: 20px;
        transition: all 0.3s ease-in-out;
    }

        .product-card img {
            width: 100%;
            height: auto;
            object-fit: cover;
        }

    .product-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-top: 15px;
        letter-spacing: 0.5px;
    }

    .product-desc {
        font-size: 0.9rem;
        color: #555;
        margin: 10px 0 15px;
    }

    .discover-link {
        font-size: 0.9rem;
        text-transform: uppercase;
        font-weight: 500;
        text-decoration: none;
        color: black;
        border-bottom: 1px solid black;
    }

    .discover-link:hover {
        color: #555;
        border-color: #555;
    }


