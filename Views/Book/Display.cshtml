@model WebBanStore.Models.Book

@{
    ViewData["Title"] = "Chi tiết sách";
}


<div class="container py-5">
    <div class="row g-4">
        <!-- Hình ảnh sách -->
        <div class="col-md-4 text-center">
            <img src="@Url.Content(Model.Image ?? "~/images/default-book.jpg")"
                 alt="Ảnh sách"
                 class="img-fluid rounded shadow-sm border"
                 style="max-height: 400px; object-fit: cover;" />
        </div>

        <!-- Nội dung chi tiết -->
        <div class="col-md-8">
            <h1 class="fw-bold mb-3"><i class="bi bi-book"></i> @Model.Title</h1>

            <ul class="list-group list-group-flush mb-4">
                <li class="list-group-item">
                    <i class="bi bi-person-lines-fill"></i> <strong>Tác giả:</strong> @Model.Author
                </li>
                <li class="list-group-item">
                    <i class="bi bi-currency-dollar"></i> <strong>Giá:</strong> @Model.Price.ToString("N0") VNĐ
                </li>
                <li class="list-group-item">
                    <i class="bi bi-tags"></i> <strong>Thể loại:</strong> <span class="badge bg-secondary">@Model.Category?.CategoryName</span>
                </li>
            </ul>

            <div class="mb-4">
                <h5><i class="bi bi-file-earmark-text"></i> Mô tả</h5>
                <p class="text-muted" style="text-align: justify;">@Model.Description</p>
            </div>

            <div class="d-flex gap-2">
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.BookId">
                    <i class="bi bi-pencil-square"></i> Sửa
                </a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.BookId" onclick="return confirm('Bạn có chắc chắn muốn xóa không?');">
                    <i class="bi bi-trash3"></i> Xóa
                </a>
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>
